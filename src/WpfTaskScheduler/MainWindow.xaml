                                                </Grid>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="headerBorder" Property="Background" Value="#1A84FFD9"/>
                                                    <Setter TargetName="headerContent" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FFffe885" Opacity="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter TargetName="arrowPath" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FFffe885" Opacity="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>

                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="arrowPath" Property="Data" Value="M 0,8 L 8,0 L 16,8 Z"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <!-- Expandable Content -->
                                <ContentPresenter x:Name="ContentSite"
                          DockPanel.Dock="Bottom"
                          Visibility="Collapsed"
                          Margin="10,5,10,10"
                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </DockPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="mainBorder" Property="Background" Value="#FF001830"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

