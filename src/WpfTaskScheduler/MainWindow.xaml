        <Style x:Key="GlowingListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border x:Name="mainBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.5"/>
                            </Border.Effect>

                            <!-- Simple ScrollViewer without external style -->
                            <ScrollViewer x:Name="PART_ScrollViewer" 
                                  Focusable="false"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Padding="1">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </ScrollViewer>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Resources>
                <!-- ListBoxItem Style -->
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#FF84FFD9"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="Margin" Value="2,1"/>
                    <Setter Property="FontFamily" Value="Courier New"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="itemBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="4" Color="#FF84FFD9" Opacity="0.3"/>
                                    </Border.Effect>

                                    <ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                        <ContentPresenter.Effect>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.6"/>
                                        </ContentPresenter.Effect>
                                    </ContentPresenter>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- MouseOver State -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="itemBorder" Property="Background" Value="#1A84FFD9"/>
                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="#FF84FFD9"/>
                                        <Setter TargetName="itemBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.6"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="contentPresenter" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.9"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>

                                    <!-- Selected State -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="itemBorder" Property="Background" Value="#FF001830"/>
                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="#FF84FFD9"/>
                                        <Setter TargetName="itemBorder" Property="BorderThickness" Value="2"/>
                                        <Setter TargetName="itemBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="contentPresenter" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>

                                    <!-- Disabled State -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="itemBorder" Property="Opacity" Value="0.5"/>
                                        <Setter TargetName="contentPresenter" Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="RoundHelpButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Outer Glow Effect -->
                            <Border x:Name="outerGlow"
                            Background="Transparent"
                            BorderBrush="#FF84FFD9"
                            BorderThickness="2"
                            CornerRadius="20">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                      BlurRadius="15" 
                                      Color="#FF84FFD9"
                                      Opacity="0.6"/>
                                </Border.Effect>
                            </Border>

                            <!-- Main Border -->
                            <Border x:Name="mainBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20"
                            SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                      BlurRadius="8" 
                                      Color="#FF84FFD9"
                                      Opacity="0.4"/>
                                </Border.Effect>

                                <ContentPresenter x:Name="contentPresenter"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Content="{TemplateBinding Content}"
                                  ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="{TemplateBinding Padding}"
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="10" 
                                          Color="#FF84FFD9"
                                          Opacity="0.8"/>
                                    </ContentPresenter.Effect>
                                </ContentPresenter>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Enhanced glow on hover -->
                                <Setter TargetName="outerGlow" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="20" 
                                          Color="#FF84FFD9"
                                          Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="12" 
                                          Color="#FF84FFD9"
                                          Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="contentPresenter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                          BlurRadius="15" 
                                          Color="#FF84FFD9"
                                          Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="outerGlow" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid x:Name="root" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Check Box with Glow -->
                            <Border x:Name="checkBoxBorder"
                            Grid.Column="0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Width="20"
                            Height="20"
                            Margin="0,0,8,0"
                            CornerRadius="3"
                            SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.5"/>
                                </Border.Effect>

                                <!-- Check Mark -->
                                <Path x:Name="checkMark"
                              Data="M 4,8 L 8,12 L 16,4"
                              Stroke="#FF84FFD9"
                              StrokeThickness="2"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              StrokeLineJoin="Round"
                              Stretch="Fill"
                              Margin="2"
                              Opacity="0">
                                    <Path.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Path.Effect>
                                </Path>
                            </Border>

                            <!-- Content -->
                            <ContentPresenter x:Name="contentPresenter"
                                      Grid.Column="1"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"
                                      RecognizesAccessKey="True"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                </ContentPresenter.Effect>
                            </ContentPresenter>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Checked State -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Opacity" Value="1"/>
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#FF001830"/>
                                <Setter TargetName="checkBoxBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="checkBoxBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="checkMark" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- MouseOver State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#1A84FFD9"/>
                                <Setter TargetName="checkBoxBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="contentPresenter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Pressed State -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#3A84FFD9"/>
                            </Trigger>

                            <!-- Indeterminate State -->
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="checkMark" Property="Data" Value="M 4,10 L 16,10"/>
                                <Setter TargetName="checkMark" Property="Opacity" Value="1"/>
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#FF001830"/>
                                <Setter TargetName="checkBoxBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="checkBoxBorder" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="contentPresenter" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="checkMark" Property="Opacity" Value="0.5"/>
                            </Trigger>

                            <!-- Focused State -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="mainGrid" SnapsToDevicePixels="true">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0"/>
                            </Grid.ColumnDefinitions>

                            <!-- Main Border with Glow -->
                            <Border x:Name="mainBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.5"/>
                                </Border.Effect>
                            </Border>

                            <!-- Content Area -->
                            <Grid Margin="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>

                                <!-- Text Content -->
                                <ContentPresenter x:Name="contentPresenter"
                                          Grid.Column="0"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                    <ContentPresenter.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                    </ContentPresenter.Effect>
                                </ContentPresenter>

                                <!-- Dropdown Toggle Button -->
                                <ToggleButton x:Name="toggleButton"
                                      Grid.Column="1"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="toggleBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="0"
                                            Padding="2">
                                                <Grid>
                                                    <!-- Arrow Path -->
                                                    <Path x:Name="arrowPath"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Fill="#FF84FFD9"
                                                  Stretch="Uniform">
                                                        <Path.Data>
                                                            <PathGeometry Figures="M 0,0 L 8,8 L 16,0 Z"/>
                                                        </Path.Data>
                                                        <Path.Effect>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="4" Color="#FF84FFD9" Opacity="0.8"/>
                                                        </Path.Effect>
                                                    </Path>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="toggleBorder" Property="Background" Value="#1A84FFD9"/>
                                                    <Setter TargetName="arrowPath" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="toggleBorder" Property="Background" Value="#3A84FFD9"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="arrowPath" Property="Data">
                                                        <Setter.Value>
                                                            <PathGeometry Figures="M 0,8 L 8,0 L 16,8 Z"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </Grid>

                            <!-- Dropdown Popup -->
                            <Popup x:Name="PART_Popup"
                           Grid.Column="0"
                           AllowsTransparency="true"
                           Placement="Bottom"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           PopupAnimation="Slide"
                           Focusable="False">
                                <Grid x:Name="dropDownGrid"
                              MaxHeight="{TemplateBinding MaxDropDownHeight}"
                              MinWidth="{Binding ActualWidth, ElementName=mainGrid}">
                                    <!-- Dropdown Border with Glow -->
                                    <Border x:Name="dropDownBorder"
                                    Background="#FF000C18"
                                    BorderBrush="#FF84FFD9"
                                    BorderThickness="2"
                                    CornerRadius="0,0,4,4"
                                    Margin="0,-1,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="0.7"/>
                                        </Border.Effect>

                                        <!-- ScrollViewer for dropdown items -->
                                        <ScrollViewer x:Name="DropDownScrollViewer">
                                            <ItemsPresenter x:Name="ItemsPresenter" 
                                                   KeyboardNavigation.DirectionalNavigation="Contained"
                                                   SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- MouseOver State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Dropdown Open State -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="mainBorder" Property="Background" Value="#FF001830"/>
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Focused State -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="mainBorder" Property="Background" Value="#FF001830"/>
                                <Setter TargetName="mainBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="mainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="contentPresenter" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Resources>
                <!-- ComboBoxItem Style -->
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#FF84FFD9"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="Margin" Value="2,1"/>
                    <Setter Property="FontFamily" Value="Cascadia Code"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="itemBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="4" Color="#FF84FFD9" Opacity="0.3"/>
                                    </Border.Effect>

                                    <ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                        <ContentPresenter.Effect>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.6"/>
                                        </ContentPresenter.Effect>
                                    </ContentPresenter>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <!-- MouseOver State -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="itemBorder" Property="Background" Value="#1A84FFD9"/>
                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="#FF84FFD9"/>
                                        <Setter TargetName="itemBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.6"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="contentPresenter" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.9"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>

                                    <!-- Selected State -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="itemBorder" Property="Background" Value="#FF001830"/>
                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="#FF84FFD9"/>
                                        <Setter TargetName="itemBorder" Property="BorderThickness" Value="2"/>
                                        <Setter TargetName="itemBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="contentPresenter" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="1"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>

                                    <!-- Disabled State -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="itemBorder" Property="Opacity" Value="0.5"/>
                                        <Setter TargetName="contentPresenter" Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="GlowingSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid x:Name="rootGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Track Background -->
                            <Border x:Name="trackBackground"
                            Grid.Row="1"
                            Height="8"
                            Background="#FF000C18"
                            BorderBrush="#FF84FFD9"
                            BorderThickness="2"
                            CornerRadius="4"
                            Margin="5,10">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.4"/>
                                </Border.Effect>
                            </Border>

                            <!-- Track Foreground (Progress) -->
                            <Border x:Name="trackForeground"
                            Grid.Row="1"
                            Height="8"
                            Background="#1A84FFD9"
                            BorderBrush="#FF84FFD9"
                            BorderThickness="2,2,0,2"
                            CornerRadius="4,0,0,4"
                            Margin="5,10"
                            HorizontalAlignment="Left">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.6"/>
                                </Border.Effect>
                            </Border>

                            <!-- Thumb -->
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.Thumb>
                                    <Thumb x:Name="thumb" 
                                   Width="20" 
                                   Height="20"
                                   Background="#FF000C18"
                                   BorderBrush="#FF84FFD9"
                                   BorderThickness="2">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10"
                                                Width="{TemplateBinding Width}"
                                                Height="{TemplateBinding Height}">
                                                    <Border.Effect>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.7"/>
                                                    </Border.Effect>

                                                    <!-- Inner Glow Effect -->
                                                    <Border Width="12" 
                                                    Height="12" 
                                                    Background="#FF84FFD9"
                                                    CornerRadius="6"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                        <Border.Effect>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.9"/>
                                                        </Border.Effect>
                                                    </Border>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="thumbBorder" Property="BorderThickness" Value="3"/>
                                                        <Setter TargetName="thumbBorder" Property="Width" Value="24"/>
                                                        <Setter TargetName="thumbBorder" Property="Height" Value="24"/>
                                                        <Setter TargetName="thumbBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="1"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>

                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="thumbBorder" Property="Background" Value="#FF001830"/>
                                                        <Setter TargetName="thumbBorder" Property="BorderThickness" Value="3"/>
                                                        <Setter TargetName="thumbBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#FF84FFD9" Opacity="1"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>

                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="thumbBorder" Property="Opacity" Value="0.5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>

                            <!-- Tick Bars (Optional - only show if TickPlacement is set) -->
                            <TickBar x:Name="TopTick"
                             Grid.Row="0"
                             Height="4"
                             Fill="#FF84FFD9"
                             Placement="Top"
                             Visibility="Collapsed">
                                <TickBar.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="4" Color="#FF84FFD9" Opacity="0.6"/>
                                </TickBar.Effect>
                            </TickBar>

                            <TickBar x:Name="BottomTick"
                             Grid.Row="2"
                             Height="4"
                             Fill="#FF84FFD9"
                             Placement="Bottom"
                             Visibility="Collapsed">
                                <TickBar.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="4" Color="#FF84FFD9" Opacity="0.6"/>
                                </TickBar.Effect>
                            </TickBar>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Show ticks based on TickPlacement -->
                            <Trigger Property="TickPlacement" Value="TopLeft">
                                <Setter TargetName="TopTick" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="TickPlacement" Value="BottomRight">
                                <Setter TargetName="BottomTick" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="TickPlacement" Value="Both">
                                <Setter TargetName="TopTick" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="BottomTick" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <!-- Orientation Trigger -->
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter Property="LayoutTransform" TargetName="rootGrid">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- MouseOver Track Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="trackBackground" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="trackForeground" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Focused State -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="trackBackground" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="trackBackground" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="trackForeground" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="TopTick" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="BottomTick" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#FF000C18"/>
            <Setter Property="BorderBrush" Value="#FF84FFD9"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF84FFD9"/>
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid x:Name="root" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Radio Button Circle with Glow -->
                            <Border x:Name="radioBorder"
                            Grid.Column="0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Width="20"
                            Height="20"
                            Margin="0,0,8,0"
                            CornerRadius="10"
                            SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.5"/>
                                </Border.Effect>

                                <!-- Check Mark (Dot) -->
                                <Border x:Name="checkMark"
                                Width="10"
                                Height="10"
                                Background="#FF84FFD9"
                                CornerRadius="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Opacity="0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Border.Effect>
                                </Border>
                            </Border>

                            <!-- Content -->
                            <ContentPresenter x:Name="contentPresenter"
                                      Grid.Column="1"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"
                                      RecognizesAccessKey="True"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#FF84FFD9" Opacity="0.8"/>
                                </ContentPresenter.Effect>
                            </ContentPresenter>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Checked State -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Opacity" Value="1"/>
                                <Setter TargetName="radioBorder" Property="Background" Value="#FF001830"/>
                                <Setter TargetName="radioBorder" Property="BorderThickness" Value="3"/>
                                <Setter TargetName="radioBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="checkMark" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- MouseOver State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="radioBorder" Property="Background" Value="#FF84FFD9"/>
                                <Setter TargetName="radioBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="contentPresenter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Pressed State -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="radioBorder" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="radioBorder" Property="Background" Value="#FF84FFD9"/>
                            </Trigger>

                            <!-- Disabled State -->
