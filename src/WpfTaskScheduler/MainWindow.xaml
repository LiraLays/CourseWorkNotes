                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="rootGrid">
                            <!-- Track Background -->
                            <Border x:Name="trackBackground"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.4"/>
                                </Border.Effect>
                            </Border>

                            <!-- Progress Indicator -->
                            <Border x:Name="progressIndicator"
                            Background="{TemplateBinding Foreground}"
                            BorderBrush="#FF84FFD9"
                            BorderThickness="1"
                            CornerRadius="4"
                            HorizontalAlignment="Left">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF84FFD9" Opacity="0.8"/>
                                </Border.Effect>

                                <!-- Inner Glow Effect -->
                                <Border Background="#3A84FFD9"
                                CornerRadius="3"
                                Margin="1">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#FF84FFD9" Opacity="0.6"/>
                                    </Border.Effect>
                                </Border>
                            </Border>

                            <!-- Pulsing Animation for Active State -->
                            <Border x:Name="pulseEffect"
                            Background="#FF84FFD9"
                            CornerRadius="4"
                            HorizontalAlignment="Left"
                            Opacity="0"
                            Margin="1"
                            Width="0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="0"/>
                                </Border.Effect>
                            </Border>

                            <!-- Text Display -->
                            <TextBlock x:Name="progressText"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#FF84FFD9"
                               FontFamily="Cascadia Code"
                               FontSize="10"
                               FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF84FFD9" Opacity="0.8"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Indeterminate State -->
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="progressIndicator" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="pulseEffect" Property="Opacity" Value="1"/>
                                <Setter TargetName="progressText" Property="Text" Value="Processing..."/>
                            </Trigger>

                            <!-- MouseOver State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="trackBackground" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#FF84FFD9" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="progressIndicator" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#FF84FFD9" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="trackBackground" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="progressIndicator" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="progressText" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

