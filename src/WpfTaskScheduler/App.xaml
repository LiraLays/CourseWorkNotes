                        <Grid x:Name="rootGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto"
                                               MinHeight="{TemplateBinding MinHeight}" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Track Background -->
                            <Border x:Name="trackBackground"
                                    Grid.Row="1"
                                    Height="8"
                                    Background="#FF000C18"
                                    BorderBrush="#FFFFFF"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Margin="5,10">
                            </Border>

                            <!-- Track Foreground (Progress) -->
                            <Border x:Name="trackForeground"
                                    Grid.Row="1"
                                    Height="8"
                                    Background="#1A84FFD9"
                                    BorderBrush="#FFFFFF"
                                    BorderThickness="2,2,0,2"
                                    CornerRadius="4,0,0,4"
                                    Margin="5,10"
                                    HorizontalAlignment="Left">
                            </Border>

                            <!-- Thumb -->
                            <Track x:Name="PART_Track"
                                   Grid.Row="1">
                                <Track.Thumb>
                                    <Thumb x:Name="thumb"
                                           Width="20"
                                           Height="20"
                                           Background="#FF000C18"
                                           BorderBrush="#FFFFFF"
                                           BorderThickness="2">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10"
                                                        Width="{TemplateBinding Width}"
                                                        Height="{TemplateBinding Height}">

                                                    <!-- Inner Glow Effect -->
                                                    <Border Width="12"
                                                            Height="12"
                                                            Background="#FFFFFF"
                                                            CornerRadius="6"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                    </Border>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter TargetName="thumbBorder"
                                                                Property="BorderThickness"
                                                                Value="1" />
                                                        <Setter TargetName="thumbBorder"
                                                                Property="Width"
                                                                Value="20" />
                                                        <Setter TargetName="thumbBorder"
                                                                Property="Height"
                                                                Value="20" />
                                                    </Trigger>
                                                   

                                                    <!-- <Trigger Property="IsDragging"
                                                             Value="True">
                                                        <Setter TargetName="thumbBorder"
                                                                Property="Background"
                                                                Value="#FF001830" />
                                                        <Setter TargetName="thumbBorder"
                                                                Property="BorderThickness"
                                                                Value="3" />
                                                    </Trigger> -->

                                                    <Trigger Property="IsEnabled"
                                                             Value="False">
                                                        <Setter TargetName="thumbBorder"
                                                                Property="Opacity"
                                                                Value="0.5" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>

                            <!-- Tick Bars (Optional - only show if TickPlacement is set) -->
                            <TickBar x:Name="TopTick"
                                     Grid.Row="0"
                                     Height="4"
                                     Fill="#FFFFFF"
                                     Placement="Top"
                                     Visibility="Collapsed">
                            </TickBar>

                            <TickBar x:Name="BottomTick"
                                     Grid.Row="2"
                                     Height="4"
                                     Fill="#FFFFFF"
                                     Placement="Bottom"
                                     Visibility="Collapsed">
                            </TickBar>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Show ticks based on TickPlacement -->
                            <Trigger Property="TickPlacement"
                                     Value="TopLeft">
                                <Setter TargetName="TopTick"
                                        Property="Visibility"
                                        Value="Visible" />
                            </Trigger>
                            <Trigger Property="TickPlacement"
                                     Value="BottomRight">
                                <Setter TargetName="BottomTick"
                                        Property="Visibility"
                                        Value="Visible" />
                            </Trigger>
                            <Trigger Property="TickPlacement"
                                     Value="Both">
                                <Setter TargetName="TopTick"
                                        Property="Visibility"
                                        Value="Visible" />
                                <Setter TargetName="BottomTick"
                                        Property="Visibility"
                                        Value="Visible" />
                            </Trigger>

                            <!-- Orientation Trigger -->
                            <Trigger Property="Orientation"
                                     Value="Vertical">
                                <Setter Property="LayoutTransform"
                                        TargetName="rootGrid">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- MouseOver Track Effect -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                            </Trigger>

                            <!-- Focused State -->
                            <Trigger Property="IsKeyboardFocused"
                                     Value="True">
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="trackBackground"
                                        Property="Opacity"
                                        Value="0.5" />
                                <Setter TargetName="trackForeground"
                                        Property="Opacity"
                                        Value="0.5" />
                                <Setter TargetName="TopTick"
                                        Property="Opacity"
                                        Value="0.5" />
                                <Setter TargetName="BottomTick"
                                        Property="Opacity"
                                        Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingRadioButtonStyle"
               TargetType="RadioButton">
            <Setter Property="Background"
                    Value="#FF000C18" />
            <Setter Property="BorderBrush"
                    Value="#FFFFFF" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="Foreground"
                    Value="#FFFFFF" />
            <Setter Property="FontFamily"
                    Value="Cascadia Code" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Padding"
                    Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid x:Name="root"
                              Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Radio Button Circle with Glow -->
                            <Border x:Name="radioBorder"
                                    Grid.Column="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True">

                                <!-- Check Mark (Dot) -->
                                <Border x:Name="checkMark"
                                        Width="10"
                                        Height="10"
                                        Background="#FFFFFF"
                                        CornerRadius="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Opacity="0">
                                </Border>
                            </Border>

                            <!-- Content -->
                            <ContentPresenter x:Name="contentPresenter"
                                              Grid.Column="1"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                            </ContentPresenter>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Checked State -->
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter TargetName="checkMark"
                                        Property="Opacity"
                                        Value="1" />
                                <Setter TargetName="radioBorder"
                                        Property="Background"
                                        Value="#FF001830" />
                                <Setter TargetName="radioBorder"
                                        Property="BorderThickness"
                                        Value="3" />
                            </Trigger>

                            <!-- MouseOver State -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="radioBorder"
                                        Property="Background"
                                        Value="#FFFFFF" />
                            </Trigger>

                            <!-- Pressed State -->
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="radioBorder"
                                        Property="Opacity"
                                        Value="0.8" />
                                <Setter TargetName="radioBorder"
                                        Property="Background"
                                        Value="#FFFFFF" />
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="radioBorder"
                                        Property="Opacity"
                                        Value="0.5" />
                                <Setter TargetName="contentPresenter"
                                        Property="Opacity"
                                        Value="0.5" />
                                <Setter TargetName="checkMark"
                                        Property="Opacity"
                                        Value="0.5" />
                            </Trigger>

                            <!-- Focused State -->
                            <Trigger Property="IsFocused"
                                     Value="True">
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlowingProgressBarStyle"
               TargetType="ProgressBar">
            <Setter Property="Background"
                    Value="#FF000C18" />
            <Setter Property="Foreground"
                    Value="#FFFFFF" />
            <Setter Property="BorderBrush"
                    Value="#FFFFFF" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="SnapsToDevicePixels"
                    Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="rootGrid">
                            <!-- Track Background -->
                            <Border x:Name="trackBackground"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                            </Border>

                            <!-- Progress Indicator -->
                            <Border x:Name="progressIndicator"
                                    Background="{TemplateBinding Foreground}"
                                    BorderBrush="#FFFFFF"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    HorizontalAlignment="Left">

                                <!-- Inner Glow Effect -->
                                <Border Background="#3A84FFD9"
                                        CornerRadius="3"
                                        Margin="1">
                                </Border>
                            </Border>

                            <!-- Pulsing Animation for Active State -->
                            <Border x:Name="pulseEffect"
                                    Background="#FFFFFF"
                                    CornerRadius="4"
                                    HorizontalAlignment="Left"
                                    Opacity="0"
                                    Margin="1"
                                    Width="0">
                            </Border>

                            <!-- Text Display -->
                            <TextBlock x:Name="progressText"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#FFFFFF"
                                       FontFamily="Cascadia Code"
                                       FontSize="10"
                                       FontWeight="Bold">
                            </TextBlock>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Indeterminate State -->
                            <Trigger Property="IsIndeterminate"
                                     Value="True">
                                <Setter TargetName="progressIndicator"
                                        Property="Visibility"
                                        Value="Collapsed" />
                                <Setter TargetName="pulseEffect"
                                        Property="Opacity"
                                        Value="1" />
                                <Setter TargetName="progressText"
                                        Property="Text"
                                        Value="Processing..." />
                            </Trigger>

                            <!-- MouseOver State -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="trackBackground"
                                        Property="Opacity"
                                        Value="0.5" />
                                <Setter TargetName="progressIndicator"
                                        Property="Opacity"
                                        Value="0.5" />
                                <Setter TargetName="progressText"
                                        Property="Opacity"
                                        Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RedGlowingCircle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Height"
                    Value="100" />
            <Setter Property="Stroke"
                    Value="Red" />
            <Setter Property="StrokeThickness"
                    Value="8" />
            <Setter Property="Fill"
                    Value="Transparent" />
        </Style>

        <Style x:Key="BlueGlowingCircle"
               TargetType="Ellipse">
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Height"
                    Value="100" />
            <Setter Property="Stroke"
                    Value="Blue" />
            <Setter Property="StrokeThickness"
                    Value="8" />
            <Setter Property="Fill"
                    Value="Transparent" />
        </Style>
    </Application.Resources>
</Application>
